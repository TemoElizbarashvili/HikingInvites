    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Hiking Tours in Georgia</title>
    <link rel="stylesheet" type="text/css" href="~/css/site.css">
</head>
<body>
    <header>
        <nav>
            <ul>
                <li><a href="#">Home</a></li>
                <li><a href="#">Tours</a></li>
                <li><a href="#">About</a></li>
                <li><a href="#">Contact</a></li>
            </ul>
        </nav>
    </header>

    <main>
        
            <section class="hero">
                <h1>Hiking Tours in Georgia</h1>
                <p>Explore the natural beauty of Georgia with our guided hiking tours</p>
                <a asp-action="RsvpForm" class="button">Book Now</a>
            </section>

            <section class="featured-places">
                <h2>Featured Places</h2>
                <div class="grid-container">
                    <div class="grid-item">
